{
  "name": "@ai-screen/cli",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "ai-screen": "./dist/cli.js"
  },
  "scripts": {
    "pretty": "prettier -u --write \"**/*\" --log-level warn",
    "ts-check": "tsc --noEmit",
