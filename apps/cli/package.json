  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "commander": "^12.1.0",
    "errorhandler": "^1.5.1",
    "express": "^5.1.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^5.0.3",
    "tsx": "^4.20.3"
  }
}
